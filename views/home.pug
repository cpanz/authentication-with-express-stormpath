html
head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title Stormpath authentication
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", rel="stylesheet")
    script(src="https://code.jquery.com/jquery-2.2.4.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js")
body
    .navbar.navbar-default.navbar-static-top
          .container
            .navbar-header
              button.navbar-toggle(type='button' data-toggle='collapse' data-target='.navbar-collapse')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href="/") PUG
            .collapse.navbar-collapse
              ul.nav.navbar-nav
                block navsections
                  li: a(href='/') Home
              ul.nav.navbar-nav.navbar-right
                li: a(href="/login") Login
                li: a(href="/register") Register 
    div.container
        div.jumbotron
            h1 Hello!

            if user
                p Welcome, #{user.fullname}
                p
                    a.small(href="profile") Edit my profile
                form(action="/logout", method="POST")
                    button.btn.btn-default(type="submit") Logout
            else
                p Welcome to my app, ready to get started?
                p
                    a.btn.btn-primary(href="/login") login
                p
                    span.small Don't have an account?
                    a.small(href="/register") Register now